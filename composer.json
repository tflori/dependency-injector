{
  "name": "tflori/dependency-injector",
  "description": "Easy and lightweight dependency injector implementing PSR-11",
  "type": "library",
  "readme": "README.md",
  "keywords": [
    "di",
    "dependency injection",
    "dependency injector",
    "dependency",
    "dependencies"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Flori",
      "email": "thflori@gmail.com",
      "role": "Developer"
    }
  ],
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=example tests",
    "test": "phpunit --color=always",
    "coverage": "phpunit --coverage-text"
  },
  "require": {
    "php": "^7.1",
    "psr/container": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "mockery/mockery": "^1.0",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "DependencyInjector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DependencyInjector\\Test\\": "tests/"
    }
  }
}
