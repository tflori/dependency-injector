{
  "name": "tflori/dependency-injector",
  "description": "Easy and lightweight dependency injector",
  "type": "library",
  "readme": "README.md",
  "keywords": [
    "di",
    "dependency injection",
    "dependency injector",
    "dependency",
    "dependencies"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Flori",
      "email": "thflori@gmail.com",
      "role": "Developer"
    }
  ],
  "scripts": {
    "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=example tests",
    "test": "phpunit --color=always",
    "coverage": "phpunit --coverage-text"
  },
  "require": {
    "php": "^5.6.0 || ^7.0"
  },
  "require-dev": {
    "ext-memcached": "*",
    "ext-memcache": "*",
    "phpunit/phpunit": "5.5.*",
    "mockery/mockery": "0.9.*",
    "squizlabs/php_codesniffer": "3.*"
  },
  "autoload": {
    "psr-4": {
      "DependencyInjector\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DependencyInjector\\Test\\": "tests/"
    }
  }
}
